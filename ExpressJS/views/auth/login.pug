extends ../layouts/common
block content
    h1 Login

    if errors
        each error in errors
            .alert.alert-danger= error

    form(method="POST")
        .form-group
        label(for="email") Email
        input#email.form-control(name="name" type="text" value=values ? values.email : '')

        .form-group
        label(for="password") Phone
        input#password.form-control(name="phone" type="password" value=values ? values.password : '')

        button(class="btn btn-primary") Login
